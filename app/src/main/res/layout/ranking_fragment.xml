<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ranking_fragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00695C"
        app:title="Ranking de UsuÃ¡rios"
        app:titleTextColor="@color/white"
        android:id="@+id/toolbar_ranking">

    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/progresso_ranking"/>

    <include
        android:id="@+id/erro_ranking"
        layout="@layout/nenhuma_infomacao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></include>

    <ListView
        android:id="@+id/lstv_ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>